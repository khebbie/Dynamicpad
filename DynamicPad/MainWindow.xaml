<Window x:Class="DynamicPad.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="MainWindow" Height="350" Width="525">
    <Grid Name="grid"  VerticalAlignment="Top" HorizontalAlignment="Left" ShowGridLines="True"  Width="505" Height="317">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*" />
            <RowDefinition Height="121*" />
            <RowDefinition Height="21*" />
            <RowDefinition Height="137*" />

        </Grid.RowDefinitions>
        <ToolBarTray Background="White">
            <ToolBar  Grid.Row="0" Height="26" HorizontalAlignment="Left" Margin="12,12,0,0" Name="toolBar1" VerticalAlignment="Top" Width="200" >
                <Button Name="ClearToolbarButton" Click="ClearOutput__">
                    <Image Source="toolbargraphics\clear.png" />
                </Button>
            </ToolBar>
        </ToolBarTray>
        <avalonEdit:TextEditor Grid.Row="1" xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit" Name="textEditor"
                           FontFamily="Consolas" SyntaxHighlighting="JavaScript" FontSize="10pt"/>
      <Label Content="Output:" Grid.Row="2" Height="28" HorizontalAlignment="Left" Margin="12,0,0,0" Name="label1" VerticalAlignment="Top" />
      <TextBox Name ="output" Grid.Row="3" Height="146" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="493" />
    </Grid>
</Window>